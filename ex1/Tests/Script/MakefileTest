CC=gcc
OBJS=RLEList.o AsciiArt.o main.o
EXEC=AsciiArtTool
DEBUG_FLAG=# can add g
COMP_FLAG=-std=c99 -Wall -Werror -pedantic-errors
MODE=t

ifeq ($(MODE), c)
	DEBUG_FLAG=-g --coverage
	EXEC=AsciiArtTool_cov
endif

$(EXEC) : $(OBJS)
	$(CC) $(DEBUG_FLAG) $(OBJS) -o $@

RLEList.o : RLEList.c RLEList.h
	$(CC) -c $(COMP_FLAG) $(DEBUG_FLAG) -I./tool $*.c
AsciiArt.o : AsciiArt.c AsciiArt.h RLEList.h
	$(CC) -c $(COMP_FLAG) $(DEBUG_FLAG) -I./tool $*.c
main.o: main.c AsciiArt.h RLEList.h
	$(CC) -c $(COMP_FLAG) $(DEBUG_FLAG) -I./tool $*.c

.PHONY: clean
clean:
	rm -f $(OBJS) $(EXEC)